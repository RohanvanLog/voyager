# Flask Configuration
# Secret key for session signing and CSRF protection
# Generate a new random string for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# OpenAI API Configuration
# Your OpenAI API key for gpt-5-nano model access
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# MySQL Database Configuration
# Database host (use 'localhost' for local development)
DB_HOST=localhost

# Database name
DB_NAME=voyager_db

# Database username
DB_USER=voyager_user

# Database password (REQUIRED - change this to your MySQL password)
DB_PASSWORD=your_database_password_here
